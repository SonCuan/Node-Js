<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Document</title>
    <style>
        form{
            width: 600px;
            text-align: center;
            margin: 50px auto;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 20px;
            background-color: #f2f2f2; ;
        }
    </style>
    <script>
        function uploadFile() {
            return confirm("Da upload thanh cong");
        }
        function validateForm() {
            var name = document.getElementById("name").value.trim();
            var price = document.getElementById("price").value.trim();
            var images = document.getElementById("images").value.trim();

            if (name === "") {
                alert("Vui long nhap ten san pham");
                return false;
            }

            if (price === "") {
                alert("Vui long nhap gia san pham ");
                return false;
            }

            if (isNaN(price)) {
                alert("Gia phai la so");
                return false;
            }

            if (images === "") {
                alert("Vui long chon tep anh ");
                return false;
            }

            return true;
        }
    </script>
</head>
<body>
    <form action="/save" method="post" enctype="multipart/form-data" onsubmit="return validateForm()" onsubmit="return uploadFile()">
        
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control" id="name">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" name="price" class="form-control" id="price">
        </div>
        <div class="mb-3" >
          <label for="images" class="form-label">Images</label>
          <input type="file" name="images" class="form-control" id="images">
        </div>
        <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
</body>
</html>